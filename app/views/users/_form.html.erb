<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render('shared/errors', obj:@user) %>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |form| %>

        <div class="form-group row">
          <%= form.label :username, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= form.text_field :username, placeholder: "Username" %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :email, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= form.email_field :email, class: "form-control", placeholder: "Email" %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :password, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= form.submit class: "btn-outline-light btn-lg" %>
        </div>
      <% end %>
      <%= link_to '[ Back ]', articles_path %>
    </div>
  </div>
</div>




