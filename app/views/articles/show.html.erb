<div id="page-content">
  <p id="notice"><%= notice %></p>

  <h2><%= @article.title %>></h2>

    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="container">
          <div class="shadow p-3 mb-5 bg-body rounded">
            <div class="card text-center">
              <div class="card-header font-italic">
                by <%= @article.user.username if @article.user.username %>
              </div>
              <div class="card-body">
                <div class="card-text"><%= simple_format(@article.description) %></div>
                <%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-info" %> |
                <%= link_to "Delete", article_path(@article), class: "btn btn-outline-info", method: :delete, data: {confirm: "Are you sure?"} %>
              </div>
              <div class="card-footer text-muted">
                <small>Created <%= time_ago_in_words(@article.created_at) %> ago,
                  Edited <%= time_ago_in_words(@article.updated_at) %> ago</small>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  <br>

  <%= link_to 'New Article', new_article_path %>
</div>
